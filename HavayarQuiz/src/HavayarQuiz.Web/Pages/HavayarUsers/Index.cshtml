@page
@model HavayarQuiz.Web.Pages.HavayarUsers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
@if (Model.HavayarUser.Count > 0)
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HavayarUser[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HavayarUser[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HavayarUser[0].BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HavayarUser[0].ProfilePicture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HavayarUser[0].UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HavayarUser[0].Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.HavayarUser)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td class="w-25">
                        <img id="profilePicture" class="h-25 w-25" src="data:image/*;base64,@(Convert.ToBase64String(item.ProfilePicture))">
                        @*@Html.DisplayFor(modelItem => item.ProfilePicture)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
